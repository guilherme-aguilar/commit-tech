{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,            // ðŸ‘ˆ Permite JS tambÃ©m
    "checkJs": false,           // ðŸ‘ˆ Evita erros em arquivos .js
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018", "dom"],
    "types": ["jest"]

{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/backend/src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/?(.*)",
      "dest": "/apps/backend/src/main.ts"
    },
    {
      "src": "/?(.*)",
      "dest": "/apps/frontend/$1"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "master": true,
      "homol": true,
      "devel": true,
      "*": false
    }
  },
  "ignoreCommand": "bash .scripts/build-vercel.sh"
}
